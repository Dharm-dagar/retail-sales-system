{
  "name": "retail-sales-system",
  "version": "1.0.0",
  "description": "A comprehensive Retail Sales Management System with search, filter, sort, and pagination",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["retail", "sales", "management", "react", "node", "express"],
  "author": "",
  "license": "MIT"
}
